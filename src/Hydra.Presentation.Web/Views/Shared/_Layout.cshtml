@using System.Security.Claims;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hydra Bootcamp</title>
    <link rel="stylesheet" href="~/css/admin.css" asp-append-version="true" />
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.0.5/css/dataTables.dataTables.css" />

    <script src="https://cdn.datatables.net/2.0.5/js/dataTables.js"></script>
</head>
<body>
    <div class="container">
        <div class="navigation">
            <ul>
                <li>
                    <a href="#">
                        <span class="icon"><i class='bx bxl-meta'></i> </span>
                        <span class="title">Hydra Bootcamp</span>
                    </a>
                    
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Home">
                        <span class="icon"><i class='bx bxs-spreadsheet'></i></span>
                        <span class="title">Dashboard</span>
                    </a>
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Candidate">
                        <span class="icon"><i class='bx bx-user-check'></i></span>
                        <span class="title">Candidate</span>
                    </a>
                    
                </li>
                <li>
                    <a asp-action="Index" asp-controller="Bootcamp">
                        <span class="icon"><i class='bx bxs-school'></i></span>
                        <span class="title">Bootcamp</span>
                    </a>
                    
                </li>
            </ul>
        </div>
        <main class="main">
            <div class="topbar">
                <div class="toggle">
                    <i class='bx bx-menu'></i>
                </div>
                <div class="user">
                    <img src="~/lib/user.jpg" />
                    <div class="dropdown-content">
                        <p>@User.Claims.Where(c => c.Type == "username").Select(c => c.Value).SingleOrDefault()</p>
                        <p class="role">@User.Claims.Where(c => c.Type == ClaimTypes.Role).Select(c => c.Value).SingleOrDefault()</p>
                        <form asp-controller="Home" asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-primary">Logout</button>
                        </form>
                    </div>
                </div>
                
            </div>
            
            @RenderBody()

            
        </main>
        
        
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    
    
</body>
</html>
