@model BootcampViewModel

@{
    @if(Model == null || Model.Id == 0)
    {
        ViewData["Title"] = "Add Bootcamp";
    } else
    {
        ViewData["Title"] = "Update Bootcamp";
    }

}

<div class="tables">
    <div class="candidateList">
        <div class="cardHeader">
            <h2>Add Bootcamp</h2>
        </div>
        <form method="post">
            @if (Model != null)
            {
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Progress" />
            }
            <table class="display">
            <tr>
                <th>Description</th>
                <td><textarea asp-for="Description" placeholder="Description" required></textarea>
                        <span asp-validation-for="Description"></span>
                    </td>
            </tr>
            <tr>
                <th>Start Date</th>
                <td><input type="date" asp-for="StartDate" placeholder="Start Date" required />
                    <span asp-validation-for="StartDate"></span>    
                </td>
            </tr>
            <tr>
                <th>End Date</th>
                <td><input type="date" asp-for="EndDate" placeholder="End Date" required />
                        <span asp-validation-for="EndDate"></span>
                </td>
            </tr>
            <tr>
                <td><button type="submit" class="btn">Submit</button></td>
            </tr>
        </table>
        </form>
        
    </div>
</div>